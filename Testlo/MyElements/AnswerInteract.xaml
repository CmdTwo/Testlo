<UserControl x:Class="Testlo.MyElements.AnswerInteract"
             Name="Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Testlo.MyElements"
             mc:Ignorable="d"
             Margin="20">
    <Border BorderBrush="{Binding ElementName=Button, Path=Foreground}" Padding="10" BorderThickness="1">
        <Button Name="Button" Content="Ответ" Style="{StaticResource ButtonTransparentStyle}" Padding="30,0" Click="Button_Click"/>
    </Border>
</UserControl>
