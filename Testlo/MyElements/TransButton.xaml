<UserControl x:Class="Testlo.MyElements.TransButton"
             Name="Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Testlo.MyElements"
             mc:Ignorable="d"
             FontFamily="/Testlo;component/Fonts/New/#Lintel" 
             FontSize="17">
    <StackPanel Orientation="Horizontal">
        <Rectangle Name="LeftRectangle" Width="1" Fill="White"/>
        <Button Name="TextContent" FontSize="{Binding ElementName=Control, Path=FontSize}" FontFamily="{Binding ElementName=Control, Path=FontFamily}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,0" Style="{StaticResource ButtonTransparentStyle}" Click="TextContent_Click"/>
        <Rectangle Name="RightRectangle" Width="1" Fill="White"/>
    </StackPanel>
</UserControl>
