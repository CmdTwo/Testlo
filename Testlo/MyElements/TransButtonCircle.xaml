<UserControl x:Class="Testlo.MyElements.TransButtonCircle"
             Name="Element"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Testlo.MyElements"
             mc:Ignorable="d" 
             Height="50" Width="50"
             Margin="20,0">
    <Border BorderBrush="{Binding ElementName=FaIcon, Path=Foreground}" BorderThickness="1" CornerRadius="50">
        <Button Name="FaIcon" Style="{StaticResource FaButtonLightStyle}" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Border>
</UserControl>
