<UserControl x:Class="Testlo.MyElements.TransButtonWithIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Testlo.MyElements"
             mc:Ignorable="d" 
             FontFamily="/Testlo;component/Fonts/New/#Lintel" 
             Margin="0,30,0,0">
    <StackPanel Orientation="Horizontal">
        <Rectangle Name="LeftRectangle" Width="1" Fill="Black"/>
        <TextBlock Name="FaIcon" Foreground="{Binding ElementName=TextContent, Path=Foreground}" VerticalAlignment="Center" FontFamily="/Testlo;component/Fonts/#Font Awesome 5 Free Solid" FontSize="15"/>
        <Button Name="TextContent" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,0" Style="{StaticResource ButtonTransparentStyle}" Click="TextContent_Click"/>
        <Rectangle Name="RightRectangle" Width="1" Fill="Black"/>
    </StackPanel>
</UserControl>
