                    <StackPanel Name="NavigationPanel" Orientation="Horizontal" Visibility="Visible">

                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="50,0">
                    <ComboBox Name="TagComboBox" FontSize="16" SelectedIndex="0" FontFamily="/Testlo;component/Fonts/#Ubuntu Light" VerticalAlignment="Center" SelectionChanged="TagComboBox_SelectionChanged">
                    </ComboBox>
                    <TextBox Name="SearchNameInput" FontSize="16" Foreground="White" FontFamily="/Testlo;component/Fonts/#Ubuntu Light" VerticalAlignment="Center" MinWidth="100" MaxWidth="200" BorderBrush="#FFFF8000" Background="{x:Null}" BorderThickness="0,0,0,1" Margin="20,0,5,0" TextChanged="SearchNameInput_TextChanged"/>
