                </StackPanel>
            </StackPanel>
            <Rectangle Fill="#FFFF8000" Height="1" VerticalAlignment="Bottom"/>
        </Grid>
        <Grid Margin="50,70">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
